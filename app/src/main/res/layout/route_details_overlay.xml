<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/route_details_overlay"
    android:visibility="invisible"
    android:clickable="false"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="287dp"
        android:layout_height="120dp"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rc_details"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Your Location Input Field -->
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance:"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.9 km"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#7E71C3" /> <!-- Bold text color updated -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated Time: "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/estimated_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19 mins"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#7E71C3" /> <!-- Bold text color updated -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated Time Of Arrival: "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/arrival_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:20:09 PM"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#7E71C3" /> <!-- Bold text color updated -->

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
