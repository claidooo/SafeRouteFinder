<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/route_details_overlay"
    android:visibility="invisible"
    android:clickable="false"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rc_details"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Distance & Time Details -->
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance:"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.9 km"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#7E71C3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated Time: "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/estimated_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19 mins"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#7E71C3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated Time Of Arrival: "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/arrival_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:20:09 PM"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#7E71C3" />
            </LinearLayout>
        </LinearLayout>

        <!-- New Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_cancel_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel Route"
                android:backgroundTint="#FF6B6B"
                android:textColor="@android:color/white"
                android:layout_marginBottom="6dp" />

            <Button
                android:id="@+id/btn_change_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I feel unsafe, change route"
                android:backgroundTint="#FFC107"
                android:textColor="@android:color/black"
                android:layout_marginBottom="6dp" />

            <Button
                android:id="@+id/btn_complete_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete Route (Test)"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
