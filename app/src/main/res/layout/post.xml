<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <!-- Horizontal layout for Image, Title, and Artist -->
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/deafultprofile" />

        <!-- Vertical layout for Title and Artist -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amagikun"
                android:textSize="16sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tokyo, Japan"
                    android:textSize="10sp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="14sp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/timedate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oct 12, 2024 | 8:90PM"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/contentpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Streetlights are dim, and I noticed several CCTV cameras were down. Recommend alternative routes after dark."
        android:textSize="14sp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"/>
</LinearLayout>